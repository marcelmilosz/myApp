<%- include('../includes/head.ejs') %>
<% if (typeof(title) === 'undefined') { %>
<title> Title not found! </title>
<% } else { %>
<title> <%= title %> </title>
<% } %>
<!-- Above is navbar stuff -->

<section class="section">
    <div class="container is-max-desktop signUp">
        <div class="signUp-container">
            <div class="signUp-box">
                <h1> Sign in </h1>
                <p class="login-info"> Already have an account?<br> <span><a href="/login"> Log in </a></span></p>
                <form action="/signIn" method="POST">
                    <input type="text" name="username" placeholder="username" minlength="5" maxlength="20" required>
                    <br>
                    <input type="email" name="email" minlength="5" maxlength="35" placeholder="e-mail" required> <br>
                    <input type="password" minlength="8" name="password" placeholder="password" required> <br>
                    <button class="button-body" id="signInBtn"> Submit </button>
                </form>
                <div class="signUp-error-box">
                    <% if (typeof(query) !== 'undefined') { %>
                    <% if(query.email == 1) { %>
                    <p> - Email already exists! </p>
                    <% } %>
                    <% if(query.username == 1) { %>
                    <p> - Username already exists! </p>
                    <% } %>
                    <% if (typeof(query.error) !== 'undefined') { %>
                    <% if (query.error == 1) { %>
                    <p> - Error.. Try again </p>
                    <% } %>
                    <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Under is footer stuff -->
